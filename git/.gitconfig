[user]
    name = "Christian Mitteldorf"
    email = "christian.km@me.com"

[init]
    defaultBranch = main

[core]
    excludesfile = ~/.gitignore

[color "status"]
    added = yellow
    changed = green
    untracked = cyan
    branch = magenta

[alias]
    b = branch
    co = checkout
    cm = commit --message
    s = status
    a = add

[push]
    autoSetupRemote = true

[pull]
    rebase = true

[fetch]
    prune = true

